{% extends "base.html.j2" %}

{% block title %} Ziel erstellen {% endblock %}

{% block content %}
<div class="container">
    <h2>Neues Ziel erstellen</h2>
    <form method="POST" action="{{ url_for('goal.create') }}" onsubmit="handleCreate(event)">
        <label for="department">Abteilung</label>
        <input type="text" name="department" required>
        
        <label for="statement">Aussage</label>
        <textarea name="statement" required></textarea>
        
        <label for="criteria">Kriterien</label>
        <textarea name="criteria" required></textarea>
        
        <label for="rating">Bewertung (1-10)</label>
        <input type="number" name="rating" min="1" max="10" required>
        
        <label for="assessment">Einsch√§tzung</label>
        <textarea name="assessment" required></textarea>
        
        <button type="submit">Erstellen</button>
    </form>
</div>
{% endblock %}